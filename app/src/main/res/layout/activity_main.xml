<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <View
        android:id="@+id/ellipse_3"
        android:layout_width="145dp"
        android:layout_height="146dp"
        android:translationX="-60dp"
        android:translationY="-20dp"
        android:background="@drawable/blue_circle"
        />
    <View
        android:id="@+id/ellipse_2"
        android:layout_width="145dp"
        android:layout_height="146dp"
        android:translationY="-70dp"
        android:background="@drawable/blue_circle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Smart Attendance"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/josefin_sans"
            android:text="Streamline your attendance \n process with ease."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/whiteboard"/>
    </LinearLayout>

    <Button

        android:layout_width="278dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/credentials_button"
        app:backgroundTint="@color/custom_button_color"
        android:onClick="handleGetStarted"
        android:fontFamily="@font/poppins_bold"
        android:text="Let's Get Started"
        android:textColor="@color/black"
        android:textSize="16sp" />
</RelativeLayout>

