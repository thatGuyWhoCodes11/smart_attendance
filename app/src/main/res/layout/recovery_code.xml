<?xml version="1.0" encoding="utf-8"?>
<!-- currently not being used -->
<RelativeLayout
    android:id="@+id/SignInLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/ellipse_3"
        android:layout_width="145dp"
        android:layout_height="146dp"
        android:translationX="-60dp"
        android:translationY="-20dp"
        android:background="@drawable/blue_circle"
        />
    <View
        android:id="@+id/ellipse_2"
        android:layout_width="145dp"
        android:layout_height="146dp"
        android:translationY="-70dp"
        android:background="@drawable/blue_circle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Verfication"
            android:textSize="30dp" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/recoverpassword"
            android:layout_marginVertical="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/josefin_sans"
            android:text="Enter the code that's been sent to your email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/recover_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginHorizontal="40dp"
            android:hint="Enter the code"
            android:background="@drawable/credentials_edit_text"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:inputType="number"
            />


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="278dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/credentials_button"
        android:fontFamily="@font/poppins_bold"
        android:text="Continue"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@color/custom_button_color"
        android:onClick="handleVerfication"/>
</RelativeLayout>

