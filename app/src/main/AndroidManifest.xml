<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectWork"
        tools:targetApi="31">

        <!-- Existing activities -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:exported="false"/> <!-- Specify exported status -->
        <activity
            android:name=".Register"
            android:exported="false"/> <!-- Specify exported status -->
        <activity
            android:name=".RegisterFinal"
            android:exported="false"/> <!-- Specify exported status -->
        <activity
            android:name=".CourseSelection"
            android:exported="false"/> <!-- Specify exported status -->
        <activity
            android:name=".PasswordRecovery"
            android:exported="false"/> <!-- Specify exported status -->
        <activity
            android:name=".HomePage"
            android:exported="false"/> <!-- Specify exported status -->

        <!-- New HimeActivity -->
        <activity
            android:name=".HimeActivity"
            android:exported="true"> <!-- Specify exported status -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
